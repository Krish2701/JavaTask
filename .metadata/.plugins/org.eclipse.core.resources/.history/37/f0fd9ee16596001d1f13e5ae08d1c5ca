class State_Details{
	String Region;
	void southIndia() {
		System.out.println(Region);
		
	}
	void northIndia() {
		System.out.println(Region);
		
	}
}

public class StateDetails {

	public static void main(String[] args) {
		@SuppressWarnings("unused")
		LanguageInfo lof1 = new LanguageInfo();
		lof1.englishLanguage(40,"allover");
		lof1.tamilLanguage(20,"South");
		lof1.hindiLanguage(40,"North");
		
		
		

	}

